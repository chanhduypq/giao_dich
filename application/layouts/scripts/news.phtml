function echoStep($action){
    if ($action == 'step1') {
        $step = 1;
    } else if ($action == 'duan2' || $action == 'nhathauthicong2') {
        $step = 2;
    } else if ($action == 'duan3' || $action == 'nhathauthicong3') {
        $step = 3;
    } else if ($action == 'duan4' || $action == 'nhathauthicong4') {
        $step = 4;
    } else if ($action == 'duan5' || $action == 'nhathauthicong5') {
        $step = 5;
    } else if ($action == 'duan6' || $action == 'nhathauthicong6') {
        $step = 6;
    }
    for ($i = 1; $i <= 6; $i++) {
        if ($i < $step) {
            $class = ' _done';
        } else if ($i == $step) {
            $class = ' _current';
        } else {
            $class = '';
        }
        echo '<li class="ct-step-i' . $class . '"><span></span></li>';
    }
}
